{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./"
    // "types": ["node", "@playwright/test"]  // Uncomment after running npm install
  },
  "include": ["tests/**/*", "pages/**/*", "playwright.config.ts"],
  "exclude": ["node_modules"]
}
